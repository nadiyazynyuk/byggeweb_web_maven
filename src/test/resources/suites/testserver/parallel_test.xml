<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Parallel tests" parallel="tests" thread-count="2">
    <parameter name="environment" value="testserver"/>

    <test name="Project navigation tests">
        <parameter name="testData" value="/project/launchProjectTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.navigation.BasicNavigation"/>
            <class name="dk.byggeweb.project.navigation.WorkspaceNavigation"/>
            <class name="dk.byggeweb.project.navigation.PublicationSpaceNavigation"/>
        </classes>
    </test>

    <test name="Workspace folders tests">
        <parameter name="testData" value="/project/workspace/createNewFolderTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.workspace.folders.CreateNewFolder"/>
        </classes>
    </test>

</suite>