<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Byggeweb Project UI tests">
    <parameter name="baseUrl" value="https://byggeweb.dk/controller?cmd=company7.login.form&amp;language=English"/>

    <test name="Project navigation tests">
        <parameter name="testData" value="production/project/launchProjectTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.navigation.BasicNavigation"/>
            <class name="dk.byggeweb.project.navigation.WorkspaceNavigation"/>
        </classes>
    </test>

    <test name="Workspace folders tests">
        <parameter name="testData" value="production/project/workspace/createNewFolderTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.workspace.folders.CreateNewFolder"/>
        </classes>
    </test>

    <test name="Workspace enhanced upload single file tests">
        <parameter name="testData" value="production/project/workspace/enhancedUploadSingleFileTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.workspace.files.upload.EnhancedUploadSingleFile"/>
        </classes>
    </test>

    <test name="Workspace standard upload single file tests">
        <parameter name="testData" value="production/project/workspace/standardUploadSingleFileTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.workspace.files.upload.StandardUploadSingleFile"/>
        </classes>
    </test>

    <test name="Workspace transfer single file tests">
        <parameter name="testData" value="production/project/workspace/transferFileTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.workspace.files.upload.TransferSingleFile"/>
        </classes>
    </test>

    <test name="Workspace open file version test">
        <parameter name="testData" value="production/project/workspace/openFileVersionTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.workspace.files.open.OpenFileVersion"/>
        </classes>
    </test>

    <test name="Workspace edit file information tests">
        <parameter name="testData" value="production/project/workspace/editFileInformationTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.workspace.files.update.EditFileInformation"/>
        </classes>
    </test>

    <test name="Delete file from Workspace">
        <parameter name="testData" value="production/project/workspace/deleteFileTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.workspace.files.delete.DeleteFile"/>
        </classes>
    </test>

    <test name="Recycle file from Workspace">
        <parameter name="testData" value="production/project/workspace/recycleFileTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.workspace.files.delete.DeleteFileViaRecycleBin"/>
        </classes>
    </test>

    <test name="Restore recycled file from Workspace">
        <parameter name="testData" value="production/project/workspace/restoreRecycledFileTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.workspace.files.delete.RestoreFileFromRecycleBin"/>
        </classes>
    </test>

    <test name="Move file to another folder in Workspace">
        <parameter name="testData" value="production/project/workspace/moveFileTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.workspace.files.update.MoveFile"/>
        </classes>
    </test>

    <test name="Copy file to another folder in Workspace">
        <parameter name="testData" value="production/project/workspace/copyFileTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.workspace.files.update.CopyFile"/>
        </classes>
    </test>

    <test name="Lock/unlock file test">
        <parameter name="testData" value="production/project/workspace/lockFileTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.workspace.files.update.LockFile"/>
        </classes>
    </test>

    <test name="Start/stop file monitoring test">
        <parameter name="testData" value="production/project/workspace/monitorFileTestData.xml"/>
        <classes>
            <class name="dk.byggeweb.project.workspace.files.update.MonitorFile"/>
        </classes>
    </test>

</suite>